<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MakePlanActivity">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#28384A"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center">

        <Button
            android:id="@+id/addToBranchButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:autoSizeTextType="uniform"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="Add to Branch"
            android:backgroundTint="#4D92DF"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/newBranchButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:autoSizeTextType="uniform"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="New Branch"
            android:backgroundTint="#4D92DF"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/closeCircleButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:autoSizeTextType="uniform"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="Close Circle"
            android:backgroundTint="#4D92DF"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/setAttributeButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:autoSizeTextType="uniform"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="Set Attributes"
            android:backgroundTint="#4D92DF"
            android:textColor="#FFFFFF" />


        <Button
            android:id="@+id/saveButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:autoSizeTextType="uniform"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="Save Graph"
            android:backgroundTint="#4D92DF"
            android:textColor="#FFFFFF" />



        <Button
            android:id="@+id/deleteButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:autoSizeTextType="uniform"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="Anti Schlabber"
            android:backgroundTint="#4D92DF"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <fragment
        android:id="@+id/fragment"
        android:name="com.example.AlejaGuidanceSystem.CustomArFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#80000000"
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/linearLayout2" />

    <ImageButton
        android:id="@+id/return_button_make_plan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="40dp"
        android:minHeight="40dp"
        android:layout_margin="2dp"
        android:src="@drawable/return_button"
        android:background="@android:color/transparent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>